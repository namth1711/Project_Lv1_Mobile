<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66C0C0C0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Thêm sản phẩm"
                android:textColor="#36c5aa"
                android:textSize="25dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivAddImageProduct"
                android:layout_width="220dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/photo_icon" />

            <EditText
                android:id="@+id/edtAddTenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="10dp"
                android:hint="Tên sản phẩm"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:textColor="#B3000000"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtAddDonGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="10dp"
                android:hint="Đơn giá"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:textColor="#B3000000"
                android:textColorHint="#C0C0C0"
                android:textSize="14sp" />

            <Spinner

                android:id="@+id/spinnerType"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="10dp" />


            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="5dp">

                <TextView
                    android:id="@+id/txtCancelAddProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="ĐÓNG"
                    android:textColor="#36c5aa"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true">

                    <ProgressBar
                        android:id="@+id/progressBarAddProduct"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:indeterminateTint="@color/black"
                        android:progressTint="@color/black"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btnAddProductSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        android:paddingHorizontal="50dp"
                        android:text="Thêm"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

